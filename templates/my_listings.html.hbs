{{#*inline "page"}}
<div class="title" style="text-align: center; margin: 3%; font-size: x-large">
    当前登录帐号：{{ user.uname }} （用户编号：{{ user.uno }}，电话：{{ user.uphone }}，邮箱：{{ user.uemail }}，用户类型：{{user.utype}}）
</div>
<div class="orders" style="margin: 0% 10%">
<p><a>{{title}}</a> <a href="/mine">我的</a>
<a href="/new">挂租</a>
</p>

<div style="max-height: 60vh; overflow-y: scroll">
<table class="dataintable">
  <tbody>
    <tr>
      {{#if ../shown/[0]}}<th>房源编号</th>{{/if}}
      {{#if ../shown/[1]}}<th>区域</th>{{/if}}
      {{#if ../shown/[2]}}<th>地址</th>{{/if}}
      {{#if ../shown/[3]}}<th>房型</th>{{/if}}
      {{#if ../shown/[4]}}<th>楼层</th>{{/if}}
      {{#if ../shown/[5]}}<th>面积</th>{{/if}}
      {{#if ../shown/[6]}}<th>价格</th>{{/if}}
      {{#if ../shown/[7]}}<th>主要设施</th>{{/if}}
      {{#if ../shown/[8]}}<th>操作</th>{{/if}}
    </tr>
    {{#each listings}}
    <tr>
      {{#if ../shown/[0]}}<td><a href="/detail?hno={{{hno}}}">{{{hno}}}</a></td>{{/if}}
      {{#if ../shown/[1]}}<td>{{{hdistrict}}}</td>{{/if}}
      {{#if ../shown/[2]}}<td>{{{haddr}}}</td>{{/if}}
      {{#if ../shown/[3]}}<td>{{{hlo}}}</td>{{/if}}
      {{#if ../shown/[4]}}<td>{{{hflr}}}</td>{{/if}}
      {{#if ../shown/[5]}}<td>{{{harea}}}</td>{{/if}}
      {{#if ../shown/[6]}}<td>{{{hprice}}}</td>{{/if}}
      {{#if ../shown/[7]}}<td>{{{hsuite}}}</td>{{/if}}
      {{#if ../shown/[8]}}<td><button onclick="window.location.href='/modify?hno={{{hno}}}';" {{lookup ../confirm @index}}>修改</button></td>{{/if}}
    </tr>
    {{else}}
      {{#if count}}<td colspan="{{count}}">暂无订单</td>{{/if}}
    {{/each}}
  </tbody>
</table>
</div>

<form action="/logout" method="post" accept-charset="utf-8" style="text-align: center; margin: 3%;">
    <input type="submit" name="logout" id="logout" value="logout" />
</form>
</div>

{{/inline}}
{{> partials/base}}
